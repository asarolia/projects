@model DML.Generator.Web.Models.AddTableViewModel

@{
    ViewBag.Title = "AddTable";
}

@using (Html.BeginForm())
{
    <div class ="bluebox">
    <h2>Add Table</h2>
    @if (TempData["message"] != null && !string.IsNullOrEmpty(TempData["message"].ToString()))
    {
        <div class = "tempMessage">
           @TempData["message"]
        </div>
    }
    <div class = "input">
        @Html.LabelFor(model => model.TableName)
        @Html.TextBoxFor(model => model.TableName)
        @Html.ValidationMessageFor(model => model.TableName)
    </div>

    <div class = "input">
        @Html.LabelFor(model => model.HostDMLName)
        @Html.TextBoxFor(model => model.HostDMLName)
        @Html.ValidationMessageFor(model => model.HostDMLName)
    </div>
    
    <div class="input">
        @Html.LabelFor(model => model.FEDMLName)
        @Html.TextBoxFor(model => model.FEDMLName)
        @Html.ValidationMessageFor(model => model.FEDMLName)
    </div>
   <div class = "input">
        <input type="submit" name="AddTable" value="Add Table" class="button medium green"/>
    </div>
    </div>
}
 <script type="text/javascript">
     $(document).ready(function () {
         $('ul#saturday').children('li:nth-child(2)').addClass('selectedMenu');
         $('ul#saturday').children('li:nth-child(2)').children('a').css('color', '#FFF');
     });
     </script>